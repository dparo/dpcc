{
    "version": "0.1.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/dparo/dpcc"
    },
    "author": "Davide Paro",
    "license": "MIT",
    "scripts": {
        "build": "tsc",
        "watch-build": "tsc -w",
        "run": "npm run build && cd generated_srcs && node dist/main.js",
        "watch-run": "cd generated_srcs && nodemon dist/main.js",
        "run-quick": "cd generated_srcs && ts-node --transpile-only main.ts",
        "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix"
    },
    "dependencies": {
        "typescript": ">=4.1",
        "ts-node": ">=9.0.0",
        "@types/node": ">=12.7.8"
    },
    "devDependencies": {
        "nodemon": "^2.0.6"
    }
}
